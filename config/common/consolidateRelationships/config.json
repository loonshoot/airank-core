{
    "type": "common",
    "version": "1",
    "defaultBatchConfig": {
        "pollingIntervalMinutes": 5,
        "batchSize": 1000
    },
    "commonFields": {
        "source": {
            "type": "object",
            "required": true,
            "description": "The source entity of the relationship",
            "properties": {
                "id": {
                    "type": "string",
                    "required": true,
                    "description": "MongoDB _id of the source entity"
                },
                "type": {
                    "type": "string",
                    "required": true,
                    "description": "Type of the source entity (person, organization)"
                },
                "externalId": {
                    "type": "string",
                    "required": true,
                    "description": "Original ID from the source system"
                }
            }
        },
        "target": {
            "type": "object",
            "required": true,
            "description": "The target entity of the relationship",
            "properties": {
                "id": {
                    "type": "string",
                    "required": true,
                    "description": "MongoDB _id of the target entity"
                },
                "type": {
                    "type": "string",
                    "required": true,
                    "description": "Type of the target entity (person, organization)"
                },
                "externalId": {
                    "type": "string",
                    "required": true,
                    "description": "Original ID from the source system"
                }
            }
        },
        "relationshipType": {
            "type": "string",
            "required": true,
            "description": "The type of relationship between the entities",
            "enum": ["people_to_people", "people_to_organization", "organization_to_people", "organization_to_organization"]
        },
        "externalIds": {
            "type": "object",
            "required": false,
            "description": "External IDs from source systems as simple string values"
        },
        "metadata": {
            "type": "object",
            "required": true,
            "description": "Metadata about the relationship",
            "properties": {
                "sourceType": {
                    "type": "string",
                    "required": true,
                    "description": "The source system type (e.g., hubspot, salesforce)"
                },
                "createdAt": {
                    "type": "string",
                    "required": true,
                    "description": "Creation timestamp"
                },
                "updatedAt": {
                    "type": "string",
                    "required": true,
                    "description": "Last update timestamp"
                },
                "nativeRelationshipType": {
                    "type": "string",
                    "required": false,
                    "description": "Original relationship type from the source system"
                }
            }
        }
    },
    "sources": {
        "hubspot": {
            "priority": 1,
            "uniqueIdentifiers": [
                "source.id",
                "target.id",
                "externalIds"
            ]
        },
        "salesforce": {
            "priority": 2,
            "uniqueIdentifiers": [
                "source.id",
                "target.id",
                "externalIds"
            ]
        },
        "zohocrm": {
            "priority": 3,
            "uniqueIdentifiers": [
                "source.id",
                "target.id",
                "externalId"
            ]
        }
    },
    "mergeRules": {
        "confidenceThreshold": 0.5,
        "matchingCriteria": [
            "source.id",
            "target.id",
            "relationshipType"
        ]
    },
    "entityTypePriority": {
        "person": 1,
        "organization": 2,
        "deal": 3,
        "event": 4
    },
    "supportedRelationshipTypes": {
        "people_to_people": {
            "sourceType": "person",
            "targetType": "person",
            "bidirectional": true,
            "inverseName": "people_to_people"
        },
        "people_to_organization": {
            "sourceType": "person",
            "targetType": "organization",
            "bidirectional": true,
            "inverseName": "organization_to_people"
        },
        "organization_to_people": {
            "sourceType": "organization",
            "targetType": "person",
            "bidirectional": true,
            "inverseName": "people_to_organization"
        },
        "organization_to_organization": {
            "sourceType": "organization",
            "targetType": "organization",
            "bidirectional": true,
            "inverseName": "organization_to_organization"
        }
    }
} 